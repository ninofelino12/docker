    <record model="ir.ui.view" id="iot.list">
      <field name="name">iot list</field>
      <field name="model">iot.iot</field>
      <field name="arch" type="xml">
        
        <tree>
          <field name="name"/>
          <!-- <field name="value"/>
          <field name="value2"/> -->
        </tree>
        
      <!-- <button string="Your Button" class="oe_highlight" type="object" name="button_method"/>  -->
      </field>
    </record>   
    <record model="ir.ui.view" id="iot.kanban">
      <field name="name">iot list</field>
      <field name="model">iot.iot</field>
      <field name="arch" type="xml">
        
        <kanban>
          <field name="name"/>
          <!-- <field name="value"/>
          <field name="value2"/> -->
          <template>
            <h1>ww</h1>
          </template>
          </kanban>
        
      <!-- <button string="Your Button" class="oe_highlight" type="object" name="button_method"/>  -->
      </field>
    </record> 

    <!-- views/your_model_qweb.xml -->
 


    <record model="ir.ui.view" id="iot.form">
      <field name="name">iot list</field>
      <field name="model">iot.iot</field>
      <field name="arch" type="xml">
        
        <form>
         
          <!-- <field name="value"/>
          <field name="value2"/> -->
          <sheet>
            <group>
               <field name="name"/>
                  <field name="mac"/>
                 
            </group>
            <group>
                <field name="mac"/>
            </group>
                 
          </sheet>
          </form>
        
      <!-- <button string="Your Button" class="oe_highlight" type="object" name="button_method"/>  -->
      </field>
    </record>    
   

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="iot.action_window">
      <field name="name">iot window</field>
      <field name="res_model">iot.iot</field>
      <field name="view_mode">tree,form</field>
      
    </record>
